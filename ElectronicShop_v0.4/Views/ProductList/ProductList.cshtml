@model IEnumerable<ElectronicShop_v0._4.Models.Products>

@{
    ViewBag.Title = "List od products";
}

<h2>List od products</h2>


<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Category", "ProductList", new { sortOrder = ViewBag.CategorySortParameter })
        </th>
        <th>
            @Html.ActionLink("Product name", "ProductList", new { sortOrder = ViewBag.NameSortParameter })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.shortDescription)
        </th>
        <th>
            @Html.ActionLink("Price $", "ProductList", new { sortOrder = ViewBag.PriceSortParameter })
        </th>
        <th>
            @Html.ActionLink("Availabel Amount", "ProductList", new { sortOrder = ViewBag.AmountSortParameter })
        </th>
        @if (Session["SessionCustomer"] != null)
         { 
            <th>
                Your amount
            </th>
         }
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.category)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.shortDescription)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.amount)
    </td>
    @if (Session["SessionCustomer"] != null)
     {
         <td>
             @Html.ActionLink("Add to basket", "AddToBasket", new { choosenProductID = item.productID })
         </td>
     }
    </tr>
 }
</table>
